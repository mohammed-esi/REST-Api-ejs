<% include ./partiale/header %>
<div>
    <h1> <%= title %> </h1>
    <br><br><br>
    <% include ./partiale/messages %>
    <br>
            <% if (typeof articles != 'undefined') { %>
                <% articles.forEach((article) => { %>
                    <div class="card">
                        <h5 class="card-header"><%= article.author.name %></h5>
                    <div class="card-body">
                        <h5 class="card-title"><%= article.title %></h5>
                        <p class="card-text"><%= article.body%></p>
                        <a class="btn btn-dark" href="/article/<%= article._id%>">Read</a>
                    </div>
                    </div>
                    <br>
                <% }); %>
            <% } %>
</div>
<% include ./partiale/footer %>