<% include ./partiale/header %>
<div>
    <h1><%= article.title %></h1>
    <br>
    <h2><%= article.author %></h2>
    <br>
    <p><%= article.body %></p>
    <br><br>
    <% if (user) { %>
        <% if (user.id == article.author) { %>
            <a class="btn btn-warning" href="/article/edit/<%= article.id %>">Edit</a>
            <a class="btn btn-danger delete-article" href="#" data-id="<%= article._id %>">Delete</a>
        <% } %>
    <% } %>
</div>
<% include ./partiale/footer %>